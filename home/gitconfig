[column]
  ui = auto
[include]
  path = .config/git/private-config
[user]
  name = Spencer Christiansen
  email = jc.spencer92@gmail.com
[alias]
  co = checkout
  br = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  dif = difftool --no-symlinks --dir-diff
[color]
  ui = auto
[web]
  browser = open
[credential]
  helper = osxkeychain
[commit]
  gpgsign = false
  cleanup = scissors
[diff]
  tool = kitty
  guitool = kitty.gui
  # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
  # instead of a/b/c/d as prefixes for patches
  mnemonicprefix = true
  # Turn on an experimental heuristic that should make the diff easier to read
  compactionHeuristic = true
  # Show moved lines differently from added/deleted lines
  # https://twitter.com/SmileyKeith/status/946789768506912773
  colorMoved = zebra
	algorithm = histogram
	renames = true
[difftool]
  prompt = false
  trustExitCode = true
[difftool "kitty"]
  cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
  cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[pull]
	ff = only
[init]
	defaultBranch = main
[merge]
	tool = nvimdiff
	conflictstyle = zdiff3
[mergetool]
	keepBackup = false
[mergetool.nvimdiff]
	trustExitCode = false
[rerere]
	enabled = true
	autoupdate = true
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[push]
	autoSetupRemote = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[help]
	autocorrect = prompt
[rebase]
	updateRefs = true
